{
  "extends": "@repo/tsconfig/react-library.json",
  "include": [".", "styled.d.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2016", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "declarationMap": false,
    "preserveSymlinks": true,
    "skipLibCheck": true
  }
}
