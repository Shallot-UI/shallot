  },
  "peerDependencies": {
    "next": "^14",
    "styled-components": "^6"
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^9.4.0",
    "@repo/eslint-config": "workspace:*",
    "next": "^14",
    "react": "^18",
    "styled-components": "^6",
    "@repo/tsconfig": "workspace:*",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "@testing-library/react": "^16.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4"
  }
